	Definir B Como Entero;
	Definir C Como Entero;
	Leer A;
	Leer B;
	Leer C;
	Si A < 0 Entonces
		Escribir "Como A es u numero negativo se multiplican";
		Escribir A * B *C;
	FinSi
	Si A >= 0 Entonces
		Escribir "Como A no es un numero negativo se suman"
